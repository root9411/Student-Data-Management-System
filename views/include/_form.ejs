 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user" >
    <div class="new_user">
        <div class="form-group">
            <label for="rnumber" class="text-light">Registration Number</label>
            <input type="text" name="rnumber" value="" placeholder="Registration Number">
        </div>
        <div class="form-group">
            <label for="rdate" class="text-light">Registration Date</label>
            <input type="text" name="rdate" value="" placeholder="Registration Date">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="fatherName" class="text-light">Father Name</label>
            <input type="text" name="fatherName" value="" placeholder="Father Name">
        </div>
        <div class="form-group">
            <label for="motherName" class="text-light">Mother Name</label>
            <input type="text" name="motherName" value="" placeholder="Mother Name">
        </div>

        <div class="form-group">
            <label for="dob" class="text-light">Date of Birth</label>
            <input type="text" name="dob" value="" placeholder="DD/MM/YYYY">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="phoneNumber" class="text-light">Phone Number</label>
            <input type="text" name="phoneNumber" value="" placeholder="Phone Number">
        </div>
        
        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="Full Address">
        </div>
    
        <div class="form-group">
            <label for="course" class="text-light">Course Name</label>
            <input type="text" name="course" value="" placeholder="Course Name">
        </div>
        <div class="form-group">
            <label for="amountPaid" class="text-light">Amount Paid</label>
            <input type="text" name="amountPaid" value="" placeholder="Amount Paid">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update" >Save</button>
        </div>

    </div>
</form>